wget https://static.rust-lang.org/rustup.sh
sh rustup --disable-sudo --prefix=$HOME/.local

sudo -v

SRCFILES=$(sed -n '/\[files\]/,/\[endfiles\]/p' $CONFIG | grep -v '^\[.*files]'|grep -v ^#)

SRCFILE=$(echo $file | awk -F: '{print $1}')
DSTFILE=$(echo $file | awk -F: '{print $2}')


.dosy.d/
  path
  hosts
  packages

.git/
bin/dosy
bin/scripts/install.sh
main/
gui/
private/.git
private/abulafia
private/casaubon



cd "$(dirname "${BASH_SOURCE[0]}")" || exit

# get stowsh (and put it in a package)
curl -o ./bin/.local/bin/stowsh https://raw.githubusercontent.com/williamsmj/stowsh/master/stowsh
chmod +x ./bin/.local/bin/stowsh

# get all the root level directories that don't start with "."
pkgs="$(find . -maxdepth 1 ! -name '.*' -type d | sed "s|./||")"
# remove OS-specific packages from this list
pkgs=${pkgs//darwin/}
pkgs=${pkgs//linux/}

for pkg in $pkgs
do
    bin/.local/bin/stowsh -v -s "$pkg" -t "$HOME"
done
