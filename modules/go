#!/usr/bin/env bash
set -e

command=$1
shift || true
case "$command" in

    bootstrap)
        if ! which go >/dev/null 2>/dev/null
        then
            sudo apt-get install golang-go
        fi
        ;;

    desc)
        echo
        ;;

    install)
        go get "$@"
        ;;

    sync)
        go get "$@"
        ;;

    uninstall)
        go clean -i "$@"
        ;;

    update)
        go get -u "$@"
        ;;

    *)
        echo "Module does not support this command" 1>&2
        exit 2
        ;;

esac
