#!/usr/bin/env bash
set -e
command=$1
shift

case "$command" in

    bootstrap)
        sudo apt-get install golang-go
        ;;

    desc)
        echo
        ;;

    install)
        packages=$1
        go get "$packages"
        ;;

    sync)
        packages=$1
        go get "$packages"
        ;;

    uninstall)
        packages=$1
        go clean -i "$packages"
        ;;

    update)
        packages=$1
        go get -u "$packages"
        ;;

    *)
        echo "Module does not support this command" 1>&2
        exit 2
        ;;

esac
