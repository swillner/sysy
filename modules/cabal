#!/usr/bin/env bash
set -e

ask_to_install_if_not_found cabal && sudo apt-get install cabal-install

command=$1
shift || return 0
case "$command" in

    desc)
        package=$1
        desc=$(cabal info "$package" | grep '^    Synopsis:      ')
        echo "${desc:19:120}"
        ;;

    install)
        cabal update
        already_installed=$(cabal list --installed)
        for p in "$@"
        do
            if ! echo "$already_installed" | grep "^* $p$" >/dev/null
            then
                if ! TMPDIR=$XDG_RUNTIME_DIR cabal install "$p"
                then
                    break
                fi
            fi
        done
        ;;

    sync)
        already_installed=$(cabal list --installed)
        for p in "$@"
        do
            if ! echo "$already_installed" | grep "^* $p$" >/dev/null
            then
                if ! TMPDIR=$XDG_RUNTIME_DIR cabal install "$p"
                then
                    break
                fi
            fi
        done
        ;;

    *)
        error "Module does not support this command"
        ;;

esac
