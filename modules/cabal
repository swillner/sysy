#!/usr/bin/env bash
set -e

ask_to_install_if_not_found cabal && sudo apt-get install cabal-install

command=$1
shift || return 0
case "$command" in

    desc)
        package=$1
        desc=$(cabal info "$package" | grep '^    Synopsis:      ')
        echo "${desc:19:120}"
        ;;

    install|sync)
        packages=$(printf '%s\n' "$@" | sort | uniq)
        already_installed=$(cabal list --installed 2>/dev/null \
                                | sed -n 's/^\* \(.*\)$/\1/p' \
                                | sort)
        readarray -t missing < <(comm -23 <(echo "$packages") <(echo "$already_installed"))
        if [[ "${#missing[@]}" -gt 0 ]]
        then
            cabal update
            export TMPDIR=$XDG_RUNTIME_DIR
            cabal install "${missing[@]}"
        fi
        ;;

    *)
        error "Module does not support this command"
        ;;

esac
