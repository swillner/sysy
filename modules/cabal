#!/usr/bin/env bash
set -e

command=$1
shift || true
case "$command" in

    bootstrap)
        if ! which cabal >/dev/null 2>/dev/null
        then
            sudo apt-get install cabal-install
        fi
        ;;

    desc)
        package=$1
        desc=$(cabal info "$package" | grep '^    Synopsis:      ')
        echo "${desc:19:120}"
        ;;

    install)
        cabal update
        already_installed=$(cabal list --installed)
        for p in "$@"
        do
            if ! echo "$already_installed" | grep "^* $p$" >/dev/null
            then
                if ! TMPDIR=$XDG_RUNTIME_DIR cabal install "$p"
                then
                    break
                fi
            fi
        done
        ;;

    sync)
        cabal update
        already_installed=$(cabal list --installed)
        for p in "$@"
        do
            if ! echo "$already_installed" | grep "^* $p$" >/dev/null
            then
                if ! TMPDIR=$XDG_RUNTIME_DIR cabal install "$p"
                then
                    break
                fi
            fi
        done
        ;;

    *)
        echo "Module does not support this command" 1>&2
        exit 2
        ;;

esac
