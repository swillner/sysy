#!/usr/bin/env bash
set -e

command=$1
shift || true
case "$command" in

    bootstrap)
        if ! command -v cargo >/dev/null 2>/dev/null
        then
            if ask_user "Install cargo via apt-get?" "n"
            then
                sudo apt-get install cargo
            else
                curl https://sh.rustup.rs -sSf | sh
            fi
        fi
        ;;

    desc)
        echo
        ;;

    install)
        already_installed=$(cargo install --list)
        for p in "$@"
        do
            if ! echo "$already_installed" | grep "^$p " >/dev/null
            then
                if ! TMPDIR=$XDG_RUNTIME_DIR cargo install "$p"
                then
                    break
                fi
            fi
        done
        ;;

    sync)
        already_installed=$(cargo install --list)
        for p in "$@"
        do
            if ! echo "$already_installed" | grep "^$p " >/dev/null
            then
                if ! TMPDIR=$XDG_RUNTIME_DIR cargo install "$p"
                then
                    break
                fi
            fi
        done
        ;;

    uninstall)
        for p in "$@"
        do
            cargo uninstall "$p"
        done
        ;;

    *)
        echo "Module does not support this command" 1>&2
        exit 2
        ;;

esac
