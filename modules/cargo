#!/usr/bin/env bash
# -*- mode: sh; -*-

command=$1
shift

case "$command" in
    desc)
        echo # TODO cargo show
        ;;

    install)
        already_installed=$(cargo install --list)
        for p in "$@"
        do
            if ! echo "$already_installed" | grep "^$p " >/dev/null
            then
                if ! TMPDIR=$XDG_RUNTIME_DIR cargo install "$p"
                then
                    break
                fi
            fi
        done
        ;;

    sync)
        already_installed=$(cargo install --list)
        for p in "$@"
        do
            if ! echo "$already_installed" | grep "^$p " >/dev/null
            then
                if ! TMPDIR=$XDG_RUNTIME_DIR cargo install "$p"
                then
                    break
                fi
            fi
        done
        ;;

    uninstall)
        for p in "$@"
        do
            cargo uninstall "$p"
        done
        ;;

    *)
        echo "Module does not support this command" 1>&2
        exit 1
        ;;

esac
