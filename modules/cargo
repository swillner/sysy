#!/usr/bin/env bash
set -e

ask_to_install_if_not_found cargo && (curl https://sh.rustup.rs -sSf | sh)

command=$1
shift || return 0
case "$command" in

    desc)
        echo
        ;;

    install)
        already_installed=$(cargo install --list)
        for p in "$@"
        do
            if ! echo "$already_installed" | grep "^$p " >/dev/null
            then
                if ! TMPDIR=$XDG_RUNTIME_DIR cargo install "$p"
                then
                    break
                fi
            fi
        done
        ;;

    sync)
        already_installed=$(cargo install --list)
        for p in "$@"
        do
            if ! echo "$already_installed" | grep "^$p " >/dev/null
            then
                if ! TMPDIR=$XDG_RUNTIME_DIR cargo install "$p"
                then
                    break
                fi
            fi
        done
        ;;

    uninstall)
        for p in "$@"
        do
            cargo uninstall "$p"
        done
        ;;

    *)
        error "Module does not support this command"
        ;;

esac
