#!/usr/bin/env bash
set -e

command=$1
shift || true
case "$command" in

    bootstrap)
        if ! which python2 >/dev/null 2>/dev/null
        then
            info "Installing python2..."
            sudo apt-get install python2
        fi
        if ! which pip2 >/dev/null 2>/dev/null
        then
            curl -s https://bootstrap.pypa.io/get-pip.py | python2 - --user
        fi
        ;;

    desc)
        echo
        ;;

    install)
        pip2 install --progress-bar=pretty --user "$@"
        ;;

    sync)
        pip2 install --progress-bar=pretty --user "$@"
        ;;

    uninstall)
        pip2 uninstall "$@"
        ;;

    update)
        pip2 install --progress-bar=pretty --user --upgrade "$@"
        ;;

    *)
        echo "Module does not support this command" 1>&2
        exit 2
        ;;

esac
