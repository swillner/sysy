#!/usr/bin/env bash
set -e
command=$1
shift

case "$command" in
    desc)
        echo
        ;;

    install)
        packages=$1
        pip3 install --user "$packages"
        ;;

    sync)
        packages=$1
        pip3 install --user "$packages"
        ;;

    uninstall)
        packages=$1
        pip3 uninstall "$packages"
        ;;

    update)
        packages=$1
        pip3 install --user --upgrade "$packages"
        ;;

    *)
        echo "Module does not support this command" 1>&2
        exit 2
        ;;

esac
