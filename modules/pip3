# -*- mode: sh; -*-

command=$1
shift

case "$command" in
    desc)
        echo
        ;;
    install)
        pip3 install --user $@
        ;;
    sync)
        pip3 install --user $@
        ;;
    uninstall)
        pip3 uninstall $@
        ;;
    update)
        pip3 install --user --upgrade $@
        ;;
esac
