#!/usr/bin/env bash
set -e

command=$1
shift || true
case "$command" in

    bootstrap)
        if ! which python3 >/dev/null 2>/dev/null
        then
            sudo apt-get install python3
        fi
        if ! which pip3 >/dev/null 2>/dev/null
        then
            curl -s https://bootstrap.pypa.io/get-pip.py | python3 - --user
        fi
        ;;

    desc)
        echo
        ;;

    install)
        pip3 install -q --progress-bar=pretty --user "$@"
        ;;

    sync)
        pip3 install -q --progress-bar=pretty --user "$@"
        ;;

    uninstall)
        pip3 uninstall "$@"
        ;;

    update)
        pip3 install -q --progress-bar=pretty --user --upgrade "$@"
        ;;

    *)
        echo "Module does not support this command" 1>&2
        exit 2
        ;;

esac
