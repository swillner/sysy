# -*- mode: sh; -*-

command=$1
shift

case "$command" in
    desc)
        echo
        ;;
    install)
        pip2 -q install --user $@
        pip3 -q install --user $@
        ;;
    sync)
        pip2 -q install --user $@
        pip3 -q install --user $@
        ;;
    uninstall)
        pip2 -q uninstall --user $@
        pip3 -q uninstall --user $@
        ;;
    update)
        pip2 -q install --user --upgrade $@
        pip3 -q install --user --upgrade $@
        ;;
esac
