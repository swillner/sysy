#!/usr/bin/env bash
set -e

ask_to_install_if_not_found npm && sudo apt-get install npm

command=$1
shift || return 0
case "$command" in

    desc)
        echo
        ;;

    install)
        npm install -g "$@"
        ;;

    sync)
        packages=$(printf '%s\n' "$@" | sort | uniq)
        readarray -t missing < <(comm -23 <(echo "$packages") <(ls "$(npm root -g)" | sort))
        [[ "${#missing[@]}" == 0 ]] || npm install -g "${missing[@]}"
        ;;

    uninstall)
        npm uninstall -g "$@"
        ;;

    update)
        npm update "$@"
        ;;

    *)
        error "Module does not support this command"
        ;;

esac
