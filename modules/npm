#!/usr/bin/env bash
# -*- mode: sh; -*-

command=$1
shift

case "$command" in
    desc)
        echo
        ;;

    install)
        npm install -g "$@"
        ;;

    sync)
        for p in "$@"
        do
            if ! npm list -g "$p" >/dev/null 2>/dev/null
            then
                npm install -g "$p"
            fi
        done
        ;;

    uninstall)
        npm uninstall -g "$@"
        ;;

    update)
        npm update "$@"
        ;;

    *)
        echo "Module does not support this command" 1>&2
        exit 1
        ;;

esac
